<!DOCTYPE html>
<html>
<head>
  <title>Media Uploader</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<h1>
	<img class="upload-logo" src="http://icons.iconarchive.com/icons/elegantthemes/beautiful-flat/128/upload-icon.png">
	Media Uploader
	<% if user_signed_in? %> 
	  <span class="logout">
	  	<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>   
	  	<%= current_user.email %>
	  </span>
	  <% if !current_user.admin? %>
	  	<div class="admin-access">
	  		<!-- <a> -->
					<button class="form-btn">Make me admin</button>
				<!-- </a> -->
			</div>
		<% end %>    
	<% end %>
</h1>

<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>">
		<%= value %>
	</div>
<% end %>

<%= yield %>

</body>
</html>
